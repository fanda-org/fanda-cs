                                        <a href='@Url.Action("Docs", "Home")' class="nav-link @Html.IsSelected(controllers: "Home", actions: "Docs")"><i class="fe fe-file-text"></i> Documentation</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="my-3">
                    <div class="container">
                        @RenderBody()
                    </div>
                </div>
            </div>
            <footer class="footer">
                <div class="container">
                    <div class="row align-items-center flex-row-reverse">
                        <div class="col-auto ml-lg-auto">
                            <div class="row align-items-center">
                                <div class="col-auto">
                                    <ul class="list-inline list-inline-dots mb-0">
                                        <li class="list-inline-item"><a href='@Url.Action("Docs", "Home")'>Documentation</a></li>
                                        <li class="list-inline-item"><a href='@Url.Action("FAQ", "Home")'>FAQ</a></li>
                                    </ul>
                                </div>
                                @*<div class="col-auto">
                                        <a href="https://github.com/tabler/tabler" class="btn btn-outline-primary btn-sm">Source code</a>
                                    </div>*@
                            </div>
                        </div>
                        <div class="col-12 col-lg-auto mt-3 mt-lg-0 text-center">
                            Copyright © @DateTime.Today.Year <a href="#">FandaSoft</a>. All rights reserved.
                        </div>
                    </div>
                </div>
            </footer>
        }
        else
        {
            <div class="page-single">
                <div class="container">
                    @RenderBody()
                </div>
            </div>
        }
    </div>
    <script type="text/javascript">
        require(['toastr'], function (toastr) {
            toastr.options = {
                "closeButton": true,
                "debug": false,
                "newestOnTop": false,
                "progressBar": true,
                "positionClass": "toast-top-right",
                "preventDuplicates": true,
                "onclick": null,
                "showDuration": "300",
                "hideDuration": "1000",
                "timeOut": "5000",
                "extendedTimeOut": "1000",
                "showEasing": "swing",
                "hideEasing": "linear",
                "showMethod": "fadeIn",
                "hideMethod": "fadeOut"
            };
        });
    </script>
    @RenderSection("Scripts", required: false)
