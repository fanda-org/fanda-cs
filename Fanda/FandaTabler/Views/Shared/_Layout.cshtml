                                                <div class="dropdown-divider"></div>
                                                <a href="#" class="dropdown-item ">Brands</a>
                                                <a href="#" class="dropdown-item ">Segments</a>
                                                <a href="#" class="dropdown-item ">Varieties</a>
                                            </div>
                                        </li>
                                        <li class="nav-item dropdown">
                                            <a href="javascript:void(0)" class="nav-link @Html.IsSelected("Parties,PartyCategories", "Index,IndexEdit")" data-toggle="dropdown"><i class="fe fe-users"></i> Contacts</a>
                                            <div class="dropdown-menu dropdown-menu-arrow">
                                                <a href='@Url.Action("Index", "Parties")' class="dropdown-item @Html.IsSelected("Parties", actions: "Index")"><i class="fe fe-user"></i> Business Contacts</a>
