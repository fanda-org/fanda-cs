@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    var org = Context.Session.Get<OrganizationDto>("CurrentOrg");
    string orgCode = "Fanda";
    string orgName = "Fanda";
    if (org != null)
    {
        orgCode = org.Code;
        orgName = org.Name;
    }
}

<!doctype html>
<html lang="en" dir="ltr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <meta http-equiv="Content-Language" content="en" />
    <meta name="msapplication-TileColor" content="#2d89ef">
    <meta name="theme-color" content="#4188c9">
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <meta name="HandheldFriendly" content="True">
    <meta name="MobileOptimized" content="320">
    <link rel="icon" href="~/favicon.ico" type="image/x-icon" />
    <link rel="shortcut icon" type="image/x-icon" href="~/favicon.ico" />
    <!-- Generated: 2018-04-16 09:29:05 +0200 -->
    <title>@orgCode - @ViewData["Title"]</title>

    <link rel="stylesheet" href="~/assets/css/google-fonts.min.css" type="text/css" />
    <script src="~/assets/js/require.min.js"></script>
    <script>
        requirejs.config({
            baseUrl: '/'
        });
    </script>

    <!-- Dashboard Core -->
    <link rel="stylesheet" href="~/assets/css/dashboard.min.css" type="text/css" />
    <script src="~/assets/js/dashboard.js"></script>
    <link rel="stylesheet" href="~/assets/css/site.css" type="text/css" />

    <!-- SweetAlert2 -->
    @*<link href="~/assets/css/sweetalert2.min.css" rel="stylesheet" type="text/css" />*@

    <!-- Toastr Plugin -->
    <link href="~/assets/plugins/toastr/toastr.min.css" rel="stylesheet" type="text/css" />
    <script src="~/assets/plugins/toastr/plugin.js"></script>

    <!-- JSGrid Plugin -->
    <link href="~/assets/plugins/jsgrid/jsgrid.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/plugins/jsgrid/jsgrid-theme.min.css" rel="stylesheet" type="text/css" />
    <script src="~/assets/plugins/jsgrid/plugin.js"></script>

    <!-- Datatables Plugin -->
    <script src="~/assets/plugins/datatables/plugin.js"></script>

    <!-- Tabulator Tables Plugin -->
    @*<link href="~/assets/plugins/tabulator-tables/tabulator_bootstrap4.min.css" rel="stylesheet" type="text/css" />
        <script src="~/assets/plugins/tabulator-tables/plugin.js"></script>*@

    <!-- Select2 -->
    <link href="~/assets/plugins/select2/select2.min.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/plugins/select2/select2-bootstrap4.css" rel="stylesheet" type="text/css" />
    <script src="~/assets/plugins/select2/plugin.js"></script>
    @RenderSection("Styles", required: false)
</head>
<body class="">
    <div class="page">
        @if (Context.User.Identity.IsAuthenticated)@*if (!string.IsNullOrEmpty(Context.Session.Get<string>("UserId")))*@
