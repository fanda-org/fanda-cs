                                    {
                                        <li class="nav-item">
                                            <a href="javascript:void(0)" class="nav-link" data-toggle="dropdown"><i class="fe fe-book"></i> Transactions</a>
                                            <div class="dropdown-menu dropdown-menu-arrow">
                                                <a href="#" class="dropdown-item "><i class="fe fe-shopping-cart"></i> Sales</a>
                                                <a href="#" class="dropdown-item "><i class="fe fe-truck"></i> Purchase</a>
                                            </div>
                                        </li>
                                        <li class="nav-item dropdown">
                                            <a href="javascript:void(0)" class="nav-link" data-toggle="dropdown"><i class="fe fe-box"></i> Inventory</a>
                                            <div class="dropdown-menu dropdown-menu-arrow">
                                                <a href="#" class="dropdown-item ">Goods and Services</a>
                                                <a href="#" class="dropdown-item ">Categories</a>
