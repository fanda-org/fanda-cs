                                </div>
                                <div class="dropdown">
                                    <a href="#" class="nav-link pr-0 leading-none" data-toggle="dropdown">
                                        <span class="avatar" style="background-image: url(/demo/faces/male/11.jpg)"></span>
                                        <span class="ml-2 d-none d-lg-block">
                                            <span class="text-default">@Context.User.Identity.Name</span>
                                            <small class="text-muted d-block mt-1">Administrator</small>
                                        </span>
                                    </a>
                                    <div class="dropdown-menu dropdown-menu-right dropdown-menu-arrow">
                                        <a class="dropdown-item" href="#">
                                            <i class="dropdown-icon fe fe-user"></i> Profile
                                        </a>
                                        <a class="dropdown-item" href="#">
                                            <i class="dropdown-icon fe fe-settings"></i> Settings
                                        </a>
                                        <a class="dropdown-item" href="#">
                                            <i class="dropdown-icon fe fe-send"></i> Message
                                        </a>
                                        <div class="dropdown-divider"></div>
                                        <a class="dropdown-item" href="#">
                                            <i class="dropdown-icon fe fe-help-circle"></i> Need help?
                                        </a>
                                        <form asp-controller="Users" asp-action="Logout" method="post">
                                            <button class="dropdown-item" asp-controller="Users" asp-action="Logout" type="submit">
                                                <i class="dropdown-icon fe fe-log-out"></i> Sign out
                                            </button>
                                        </form>
                                        @*href='@Url.Action("Logout", "Users")'*@
                                    </div>
                                </div>
                                <div class="dropdown d-md-flex">
