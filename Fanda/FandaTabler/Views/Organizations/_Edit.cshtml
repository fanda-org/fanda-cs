@model OrganizationDto
<!-- Modals -->
<div class="modal modal-blur fade" id="modal-edit" tabindex="-1" role="dialog" aria-hidden="true" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header align-items-center">
                <h5 class="modal-title">@(Model?.Id == null || Model?.Id == Guid.Empty ? "Create New" : "Edit") Organization</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" />
            </div>
            <div class="card">
                <ul class="nav nav-tabs nav-fill" data-toggle="tabs">
                    <li class="nav-item">
                        <a href="#tabs-general" class="nav-link active" data-toggle="tab">
                            <svg xmlns="http://www.w3.org/2000/svg" class="icon mr-2" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                <path stroke="none" d="M0 0h24v24H0z" />
                                <polyline points="5 12 3 12 12 3 21 12 19 12" />
                                <path d="M5 12v7a2 2 0 0 0 2 2h10a2 2 0 0 0 2 -2v-7" />
                                <path d="M9 21v-6a2 2 0 0 1 2 -2h2a2 2 0 0 1 2 2v6" />
                            </svg> General
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="#tabs-contacts" class="nav-link" data-toggle="tab">
                            <svg xmlns="http://www.w3.org/2000/svg" class="icon mr-2" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                <path stroke="none" d="M0 0h24v24H0z" />
                                <circle cx="12" cy="7" r="4" />
                                <path d="M5.5 21v-2a4 4 0 0 1 4 -4h5a4 4 0 0 1 4 4v2" />
                            </svg> Contacts
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="#tabs-addresses" class="nav-link" data-toggle="tab">
                            <svg xmlns="http://www.w3.org/2000/svg" class="icon mr-2" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                <path stroke="none" d="M0 0h24v24H0z" />
                                <polyline points="21 12 17 12 14 20 10 4 7 12 3 12" />
                            </svg> Addresses
                        </a>
                    </li>
                </ul>
                <div class="card-body modal-body">
                    <form asp-action="Save">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="DateCreated" />
                        <div class="tab-content">
                            <div class="tab-pane active show" id="tabs-general">
                                @* method="post" id="orgForm" *@
                                <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
                                <div class="row">
                                    <div class="col-lg-4">
                                        <div class="form-group mb-3">
                                            <label asp-for="Code" class="form-label"></label>
                                            <input asp-for="Code" class="form-control" placeholder="@Html.DisplayNameFor(m => m.Code)" />
                                            <small><span asp-validation-for="Code" class="form-text text-danger"></span></small>
                                        </div>
                                    </div>
                                    <div class="col-lg-8">
                                        <div class="form-group mb-3">
                                            <label asp-for="Name" class="form-label"></label>
                                            <input asp-for="Name" class="form-control" placeholder="@Html.DisplayNameFor(m => m.Name)" />
                                            <small><span asp-validation-for="Name" class="text-danger"></span></small>
                                        </div>
                                    </div>
                                    <div class="col-lg-12">
                                        <div class="form-group mb-3">
                                            <label asp-for="Description" class="form-label"></label>
                                            <input asp-for="Description" class="form-control" placeholder="@Html.DisplayNameFor(m => m.Description)" />
                                            <small><span asp-validation-for="Description" class="text-danger"></span></small>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group mb-3">
                                            <label asp-for="RegdNum" class="form-label"></label>
                                            <input asp-for="RegdNum" class="form-control" placeholder="@Html.DisplayNameFor(m => m.RegdNum)" />
                                            <small><span asp-validation-for="RegdNum" class="text-danger"></span></small>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group mb-3">
                                            <label asp-for="PAN" class="form-label"></label>
                                            <input asp-for="PAN" class="form-control" placeholder="@Html.DisplayNameFor(m => m.PAN)" />
                                            <small><span asp-validation-for="PAN" class="text-danger"></span></small>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group mb-3">
                                            <label asp-for="TAN" class="form-label"></label>
                                            <input ASP-for="TAN" class="form-control" placeholder="@Html.DisplayNameFor(m => m.TAN)" />
                                            <small><span asp-validation-for="TAN" class="text-danger"></span></small>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group mb-3">
                                            <label asp-for="GSTIN" class="form-label"></label>
                                            <input asp-for="GSTIN" class="form-control" placeholder="@Html.DisplayNameFor(m => m.GSTIN)" />
                                            <small><span asp-validation-for="GSTIN" class="text-danger"></span></small>
                                        </div>
                                    </div>
                                </div>
                                <div class="row align-items-center">
                                    <div class="col-lg-6">
                                        @*<div class="custom-control custom-switch ml-3">
                                                <input asp-for="Active" type="checkbox" class="custom-control-input" />
                                                <label asp-for="Active" class="custom-control-label"></label>
                                            </div>*@
                                        <label class="custom-switch m-0">
                                            <input asp-for="Active" type="checkbox" class="custom-switch-input">
                                            <span class="custom-switch-indicator"></span>
                                            <span asp-for="Active" class="custom-switch-description">Active</span>
                                        </label>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="float-right">
                                            <button type="button" class="btn btn-secondary btnPrev" disabled><i class="fe fe-arrow-left"></i> Previous</button>
                                            <button type="button" class="btn btn-secondary btnNext">Next <i class="fe fe-arrow-right"></i></button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="tab-pane" id="tabs-contacts">
                                <div class="row mb-3">
                                    <div class="col-lg-12">
                                        <div id="jsgrid-contacts"></div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="float-right">
                                            <button type="button" class="btn btn-secondary btnPrev"><i class="fe fe-arrow-left"></i> Previous</button>
                                            <button type="button" class="btn btn-secondary btnNext">Next <i class="fe fe-arrow-right"></i></button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="tab-pane" id="tabs-addresses">
                                <div class="row mb-3">
                                    <div class="col-lg-12">
                                        <div id="jsgrid-addresses"></div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="float-right">
                                            <button type="button" class="btn btn-secondary btnPrev"><i class="fe fe-arrow-left"></i> Previous</button>
                                            <button type="button" class="btn btn-secondary btnNext" disabled>Next <i class="fe fe-arrow-right"></i></button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <a href="#" type="button" class="btn btn-link link-secondary" data-dismiss="modal">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-x"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg>
                    Cancel
                </a>
                <button type="button" id="saveOrg" class="btn btn-primary ml-auto" data-save="modal">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-save"><path d="M19 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11l5 5v11a2 2 0 0 1-2 2z"></path><polyline points="17 21 17 13 7 13 7 21"></polyline><polyline points="7 3 7 8 15 8"></polyline></svg>
                    Save
                </button>
            </div>
        </div>
    </div>
</div>
<!-- Modals -->

<script type="text/javascript">
    $('#modal-edit').on('shown.bs.modal', function () {
        $('input#Code').focus();
    });
</script>
