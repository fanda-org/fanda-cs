                        <th scope="col">Email</th>
                        @*<th scope="col" class="text-right">Action</th>*@
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @Html.EditorFor(model => model.Contacts)
                    @*@for (int i = 0; i < Model.Contacts.Count; i++)
